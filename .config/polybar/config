
[bar/mybar]
  modules-left = i3
  modules-right = spotify date temperature 
  bottom = true

  ;font-0 = NotoSans-Regular:size=9;2
  font-0 = Material\ Icons:size=8;2
  font-2 = xos4\ Terminus:size=14;0
  font-3 = Siji:pixelsize=11;1
  font-4 = FontAwesome:size=11;0
  font-5 = monospace:size=9:antialias=true;2

  separator = |
  width = 100% 
  height = 15 
  background = #222d38
  radius-top = 3.0

  module-margin = 2
  module-padding = 5

  spacing = 1
  tray-position = right
  tray-maxsize = 16
  tray-padding = 10 

[module/date]
  type = internal/date
  date = %d-%m-%Y
  time = "%H:%M"
  label = %date%   %time% 

[module/i3]
  type = internal/i3

  pin-workspaces = false
  strip-wsnumbers = true
  index-sort = true
  enable-click = false
  enable-scroll = false
  wrapping-scroll = false
  reverse-scroll = false
  fuzzy-match = false
  
  format = <label-state> <label-mode>

  label-mode = %mode% 
  label-mode-padding = 5 
  label-mode-background = #FAA

  label-focused = %name% 
  label-focused-foreground = #E9BFA7
  label-focused-border = #2D503E
  label-focused-underline = #faa
  label-focused-padding = 0.5 
  label-focused-margin = 1 

  label-unfocused = %name% 
  label-unfocused-foreground = #FFF
  label-unfocused-border = #2D503E
  label-unfocused-underline = #aaa
  label-unfocused-padding = 0.5 
  label-unfocused-margin = 1 

  label-separator = |
  label-separator-pading = 2
  label-separator-foreground = #ffb52a
  label-dimmed-underline = #FFF 

[module/temperature]
  type = internal/temperature
  hwmon-path = /sys/devices/virtual/thermal/thermal_zone0/hwmon1/temp1_input
  base-temperature = 20
  warn-temperature = 60
  label = TEMP %temperature-c%

[module/spotify]
  type = custom/script
  interval = 1
  format-prefix = ""  
  format = <label>
  exec = python   ~/.config/polybar/spotify.py  -f '{play_pause} {song} - {artist} - {album}'

  format-underline = #1db954
